<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleTextView"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleTextView"
        android:hint="@string/cityEditText" />

    <Button
        android:id="@+id/getWeatherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getWeatherButton"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_below="@id/cityEditText"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/locationInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/getWeatherButton"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>